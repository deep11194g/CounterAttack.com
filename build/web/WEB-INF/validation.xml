<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>

    <global>

        <!-- An example global constant
        <constant>
            <constant-name>postalCode</constant-name>
            <constant-value>^\d{5}\d*$</constant-value>
        </constant>
        end example-->

    </global>

    <formset>

        <form name="LoginBean">
            <field property="name" depends="required, maxlength, minlength">
                <arg key="login.user"/>
                <var>
                    <var-name>maxlength</var-name>
                    <var-value>10</var-value>
                </var>
                <arg2 key="10" resource="false"/>
                <var>
                    <var-name>minlength</var-name>
                    <var-value>3</var-value>
                </var>
                <arg1 key="3" resource="false"/>
            </field>
            
            <field property="password" depends="required,maxlength,minlength">
                <arg key="login.password"/>
                <var>
                    <var-name>maxlength</var-name>
                    <var-value>10</var-value>
                </var>
                <arg2 key="10" resource="false"/>
                <var>
                    <var-name>minlength</var-name>
                    <var-value>5</var-value>
                </var>
                <arg1 key="5" resource="false"/>
            </field>
        </form>

        <form name="SignUpBean">
            <field property="name" depends="required, maxlength, minlength">
                <arg key="login.user"/>
                <var>
                    <var-name>maxlength</var-name>
                    <var-value>10</var-value>
                </var>
                <arg2 key="10" resource="false"/>
                <var>
                    <var-name>minlength</var-name>
                    <var-value>3</var-value>
                </var>
                <arg1 key="3" resource="false"/>
            </field>
            
            <field property="password" depends="required,maxlength,minlength">
                <arg key="login.password"/>
                <var>
                    <var-name>maxlength</var-name>
                    <var-value>10</var-value>
                </var>
                <arg2 key="10" resource="false"/>
                <var>
                    <var-name>minlength</var-name>
                    <var-value>5</var-value>
                </var>
                <arg1 key="5" resource="false"/>
            </field>
        </form>

        <form name="ChangeDetailBean">
            
            <field property="password" depends="required,maxlength,minlength">
                <arg key="login.password"/>
                <var>
                    <var-name>maxlength</var-name>
                    <var-value>10</var-value>
                </var>
                <arg2 key="10" resource="false"/>
                <var>
                    <var-name>minlength</var-name>
                    <var-value>5</var-value>
                </var>
                <arg1 key="5" resource="false"/>
            </field>
        </form>
        
        <form name="UploadBean">
            <field property="upArticle" depends="required,minlength">
                <arg key="upload"/>
            </field>
        </form>

        <form name="UploadTrollsBean">
            <field property="upTrolls" depends="required,minlength">
                <arg key="upload"/>
                <var>
                <var-name>minlength</var-name>
                    <var-value>5</var-value>
                </var>
                <arg1 key="5" resource="false"/>
            </field>
        </form>
        
        <form name="UploadBean">
            <field property="upArticle" depends="required,minlength">
                <arg key="upload"/>
                <var>
                <var-name>minlength</var-name>
                    <var-value>5</var-value>
                </var>
                <arg1 key="5" resource="false"/>
            </field>
        </form>
        
        <form name="CommentBean">
            <field property="comment" depends="required,maxlength">
                <arg key="comment"/>
                <var>
                    <var-name>maxlength</var-name>
                    <var-value>110</var-value>
                </var>
                </field>
            </form>

        </formset>


    <!-- An example formset for another locale -->
        <formset language="fr">

            <constant>
                <arg2 key="110" resource="false"/>
                <constant-name>postalCode</constant-name>
                <constant-value>^[0-9a-zA-Z]*$</constant-value>
            </constant>

        <!-- An example form -->
            <form name="logonForm">
                <field
                    property="username"
                    depends="required">
                    <arg key="logonForm.username"/>
                </field>
                <field
                    property="password"
                    depends="required,mask">
                    <arg key="logonForm.password"/>
                    <var>
                        <var-name>mask</var-name>
                        <var-value>^[0-9a-zA-Z]*$</var-value>
                    </var>
                </field>
            </form>

        </formset>

    </form-validation>
